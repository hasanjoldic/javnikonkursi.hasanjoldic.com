{
  "name": "@hasanjoldic/javnikonkursi",
  "version": "1.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --build",
    "build:watch": "npm run build -- --watch",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "start:watch": "nodemon dist/index.js",
    "pm2:start": "NODE_ENV=production pm2 start dist/index.js --name javnikonkursi-backend --log pm2.log",
    "pm2:restart": "NODE_ENV=production pm2 restart javnikonkursi-backend --log pm2.log",
    "db:migrate": "node ./db/migrate.js",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "license": "MIT",
  "dependencies": {
    "@graphile-contrib/pg-many-to-many": "^1.0.1",
    "@graphile-contrib/pg-simplify-inflector": "^6.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphile-build": "^4.12.2",
    "graphile-build-pg": "^4.12.3",
    "graphile-utils": "^4.12.3",
    "graphql": "^15.7.2",
    "pg": "^8.7.1",
    "postgraphile": "^4.12.8",
    "postgraphile-core": "^4.12.2",
    "postgraphile-plugin-connection-filter": "^2.2.2",
    "postgraphile-plugin-nested-mutations": "^1.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^14.0.13",
    "@types/pg": "^8.6.1",
    "nodemon": "^2.0.14",
    "postgres-migrations": "^5.3.0"
  }
}
